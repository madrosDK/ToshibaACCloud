{
    "elements": [
        {
            "type": "ValidationTextBox",
            "name": "Username",
            "caption": "Benutzername"
        },
        {
            "type": "PasswordTextBox",
            "name": "Password",
            "caption": "Passwort"
        },
        {
          "type": "Select",
          "name": "DeviceID",
          "caption": "Gerät auswählen",
          "options": [],
          "default": ""
        }

    ],
    "actions": [
        {
            "type": "Button",
            "caption": "Geräte abfragen",
            "onClick": "IPS_RequestAction($id, 'DiscoverDevices', '')"
